@{
    ViewData["Title"] = "Premium Calculator";
}

<div class="container mt-4">
    <h2>Monthly Premium Calculator</h2>

    <div class="form-group mt-3">
        <label>Name</label>
        <input id="name" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label>Age </label>
        <input id="age" type="number" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label>Date of Birth (MM/YYYY)</label>
        <input id="dob" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <label>Occupation</label>
        <select id="occupation" class="form-control">
            <option>Select</option>
            @foreach (var occ in ViewBag.Occupations)
            {
                <option>@occ</option>
            }
        </select>
    </div>

    <div class="form-group mt-3">
        <label> Sum Insured</label>
        <input id="sum" type="number" class="form-control" />
    </div>

    <hr />

    <button id="calcBtn" class="btn btn-primary mt-3">Calculate Premium</button>

    <h3 class="mt-3">Monthly Premium: <span id="premiumText"></span></h3>
</div>

@section Scripts {
    <script src="~/js/premium.js"></script>
}